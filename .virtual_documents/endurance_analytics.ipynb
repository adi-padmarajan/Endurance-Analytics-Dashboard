import numpy as np
import pandas as pd


df = pd.read_csv("activities_dataset.csv")


# Filter out Running Data
running_df = df.query("`Activity Type` == 'Run'")[["Activity ID", "Activity Date", "Activity Name", "Activity Type", "Distance", "Average Speed", 
                                      "Max Speed", "Moving Time", "Elapsed Time", "Average Heart Rate", "Max Heart Rate",
                                     "Elevation Gain", "Elevation Loss", "Elevation Low", "Elevation High", "Max Grade"]]



# Handle missing values (Average Heart Rate and Max Heart Rate)
cleaned_data = running_df.copy()
avg_maxhr = cleaned_data["Max Heart Rate"].mean().round()
avg_hr = cleaned_data["Average Heart Rate"].mean().round()
cleaned_data["Max Heart Rate"] = running_df["Max Heart Rate"].fillna(avg_maxhr)
cleaned_data["Average Heart Rate"] = running_df["Average Heart Rate"].fillna(avg_hr)
cleaned_data
